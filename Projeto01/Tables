CREATE TABLE Prova(
	IdProva INT PRIMARY KEY,
	Nome VARCHAR(100) NOT NULL,
	DataAplicacao DATETIME
)

CREATE TABLE Questao(
	IdQuestao INT PRIMARY KEY,
	Nome VARCHAR(100) NOT NULL,
	Enunciado VARCHAR(8000) NOT NULL
)

CREATE TABLE ProvaQuestao(
	IdProvaQuestao INT PRIMARY KEY,
	IdProva INT FOREIGN KEY REFERENCES dbo.Prova(IdProva),
	IdQuestao INT FOREIGN KEY REFERENCES dbo.Questao(IdQuestao),
	Valor FLOAT NOT NULL
)

CREATE TABLE Aluno(
	IdAluno INT PRIMARY KEY,
	Nome VARCHAR(100) NOT NULL,
	Email VARCHAR(320),
	RA VARCHAR(20) NOT NULL
)

CREATE TABLE AlunoProvaQuestao(
	IdAlunoProvaQuestao INT PRIMARY KEY,
	IdProvaQuestao INT FOREIGN KEY REFERENCES ProvaQuestao(IdProvaQuestao),
	IdAluno INT FOREIGN KEY REFERENCES Aluno(IdAluno),
	Resposta VARCHAR(8000),
	Nota FLOAT NOT NULL
)
